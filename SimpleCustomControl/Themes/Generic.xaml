<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimpleCustomControl">

    <Style TargetType="local:SimpleControl" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SimpleControl">
                    <Grid x:Name="EyeDropperContainer"
                      Height="100"
                      Width="100"
                      Background="Transparent">
                        <Path x:Name="OuterCircle"/>
                        <Path x:Name="InnerCircle"/>
                        <Path x:Name="UpperArc"/>
                        <Path x:Name="LowerArc"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
